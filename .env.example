# ─── Database ────────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@host:5432/gpuwatch
# Supabase: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ─── Redis (Upstash or Railway) ───────────────────────────────
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://127.0.0.1:6379

# ─── Best Buy API ─────────────────────────────────────────────
BESTBUY_API_KEY=your_bestbuy_api_key_here
# Max 50,000 req/day - plan 4-6hr refresh cycles

# ─── Amazon Product Advertising API ──────────────────────────
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_PARTNER_TAG=gpuwatch-20
AMAZON_REGION=us-east-1
# Rate limit: 1 req/sec - supplemental pricing only

# ─── Resend (Email Alerts) ────────────────────────────────────
RESEND_API_KEY=re_your_key_here
RESEND_FROM=alerts@gpuwatch.com

# ─── Sentry ──────────────────────────────────────────────────
SENTRY_DSN=https://your_key@sentry.io/your_project_id

# ─── Apify (Newegg Scraper) ───────────────────────────────────
APIFY_API_TOKEN=

# ─── App ─────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_SERVER_URL=http://localhost:3001
CRON_SECRET=change_this_long_random_string

# ─── Affiliate ───────────────────────────────────────────────
BESTBUY_AFFILIATE_ID=your_bestbuy_affiliate_id
AMAZON_AFFILIATE_TAG=gpuwatch-20
